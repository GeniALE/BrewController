{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "components/*": ["components/*"],
      "forms/*": ["forms/*"],
      "generated/*": ["generated/*"],
      "modals/*": ["modals/*"],
      "pages/*": ["pages/*"],
      "stores/*": ["stores/*"],
      "utils/*": ["utils/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"]
}
